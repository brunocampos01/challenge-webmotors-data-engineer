# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]

# Always indent by 4 characters
indent_size = 4

# Docstrings and comments use max_line_length = 79
max_line_length = 79

# Enforce Unix style line endings (\n only)
end_of_line = lf

# Set default charset
charset = utf-8
